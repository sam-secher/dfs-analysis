{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--log-level",
                "DEBUG",
                "--interface",
                "cmd"
            ]
        },
        {
            "name": "Python: Streamlit Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/main.py",
                "--server.port",
                "8080",
                "--server.headless",
                "true",
                "--server.runOnSave",
                "false",
                "--",
                "--interface",
                "streamlit",
                "--log-level",
                "INFO"
            ]
        }
    ]
}